<caldavtest>
	<description>Test OPTIONS, DAV header behavior</description>

	<require-feature>
		<feature>caldav</feature>
	</require-feature>

	<start/>
	
	<test-suite name='OPTIONS+DAV'>
		<test name='1'>
			<description>OPTIONS on calendar home returns DAV header</description>
			<request>
				<method>OPTIONS</method>
				<ruri>$calendarhome1:/</ruri>
				<verify>
					<callback>statusCode</callback>
				</verify>
				<verify>
					<callback>header</callback>
					<arg>
						<name>header</name>
						<value>DAV</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='2'>
			<description>OPTIONS on principal returns DAV header</description>
			<request>
				<method>OPTIONS</method>
				<ruri>$calendarhome1:/</ruri>
				<verify>
					<callback>statusCode</callback>
				</verify>
				<verify>
					<callback>header</callback>
					<arg>
						<name>header</name>
						<value>DAV</value>
					</arg>
				</verify>
			</request>
		</test>
	</test-suite>

	<test-suite name='PROPFIND - no DAV'>
		<test name='1'>
			<description>PROPFIND on calendar home does not return DAV header</description>
			<request>
				<method>PROPFIND</method>
				<ruri>$calendarhome1:/</ruri>
				<header>
					<name>Depth</name>
					<value>0</value>
				</header>
				<data>
					<content-type>text/xml; charset=utf-8</content-type>
					<filepath>Resource/Common/PROPFIND/props.xml</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
				<verify>
					<callback>header</callback>
					<arg>
						<name>header</name>
						<value>!DAV</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='2'>
			<description>PROPFIND on principal does not return DAV header</description>
			<request>
				<method>PROPFIND</method>
				<ruri>$calendarhome1:/</ruri>
				<header>
					<name>Depth</name>
					<value>0</value>
				</header>
				<data>
					<content-type>text/xml; charset=utf-8</content-type>
					<filepath>Resource/Common/PROPFIND/props.xml</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
				<verify>
					<callback>header</callback>
					<arg>
						<name>header</name>
						<value>!DAV</value>
					</arg>
				</verify>
			</request>
		</test>
	</test-suite>

	<end/>
	
</caldavtest>
